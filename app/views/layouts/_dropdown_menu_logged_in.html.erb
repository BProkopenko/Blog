<div class="dropdown">
  <a class=" dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Menu
  </a>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <%= link_to "Profile", current_user, class: "dropdown-item" %>
    <%= link_to "Settings", edit_user_path(current_user), class: "dropdown-item" %>
    <div class="dropdown-divider"></div>
    <% if current_user.admin? %>
      <%= link_to "Add topic", new_topic_path, class: "dropdown-item" %>
      <%= link_to "All posts", admin_index_path, class: "dropdown-item" %>
    <% elsif current_user.moder? %>
      <%= link_to "New posts", moderation_new_posts_path, class: "dropdown-item" %>
      <%= link_to "Pending posts", moderation_pending_path, class: "dropdown-item" %>
    <% end %>
    <%= link_to "Log out", logout_path, method: :delete, class: "dropdown-item" %>
  </div>
</div>