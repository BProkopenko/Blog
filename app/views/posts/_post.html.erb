<div class="user">
  <%= link_to post.user.name, post.user %>
  <div>
    <% if current_user?(post.user) or current_user.admin? %>
      <%= link_to "delete", post, method: :delete, data: {confirm: "You sure?"} %>
    <% end %>
  </div>
</div>
<div>
  <%= link_to post.title, post %>
  <span class="timestamp">Posted <%= time_ago_in_words(post.created_at) %> ago.</span>
</div>




