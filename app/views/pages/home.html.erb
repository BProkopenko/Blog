<% if logged_in? %>
  <div>
    <aside>
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>

  </div>
<% else %>
  <div>
    <h1>Welcome to the Myblog</h1>
    <h2>
      This is the home page for the Myblog
    </h2>
    <%= link_to "Sign up now!", signup_path%>
  </div>
<% end %>